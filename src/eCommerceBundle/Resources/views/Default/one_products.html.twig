{% extends "base.html.twig" %} {% block title %}Bienvenido a Geek {% endblock %} {% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/one.css') }}" /> {% endblock %} {% block body %}
<div class="row">
    <div class="col s6">
        <div class="card">
            <div class="card-image">
                <img src="../img/{{product.img}}">
            </div>
        </div>
    </div>
    <div class="col s6">
        <div class="card">
            <div class="card-content">
                <div><span class="card-title nombre">{{product.name}}</span></div>
                <div>
                    <p class="precio">{{product.price}}$</p>
                </div>
            </div>
            <div class="card-content contenedorSide">
                <div>
                    <p class="descripcion">{{product.description}}</p>
                </div>
                <div>
                    <p class="categoria">{{product.category}}</p>
                </div>
            </div>
            <div class="card-content contenedorSide2">
                <div class="input-field">
                    <select id="select">
                        <option value="" disabled selected>Cantidad</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                    </select>
                </div>
                <div class="input-field">
                    <a class="waves-effect waves-orange btn color"><i
                            class="material-icons right">add_shopping_cart</i>AL
                        CARRITO</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} {% block javascripts %}{% endblock %}