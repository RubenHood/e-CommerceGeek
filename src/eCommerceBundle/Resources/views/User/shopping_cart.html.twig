{% extends "base.html.twig" %}
{% block title %}Productos
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/all_products.css') }}"/>
{% endblock %}
{% block body %}

    <div class="container productos">
        <div class="row">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Carrito</span>
                    <table>
                        <thead>
                            <tr>
                                <th></th>
                                <th>Art√≠culo</th>
                                <th>Precio</th>
                                <th>Unidades</th>
                                <th>total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set total = 0 %}

                            {% for product in products %}

                                {% set total = total + (product.price * product.cantidad) %}
                                <tr>
                                    <td><img alt="prueba" src="/img/{{product.img}}" style="width: 60px"/></td>
                                    <td>{{ product.name }}</td>
                                    <td>{{ product.price}}</td>
                                    <td>{{ product.cantidad}}</td>
                                    <td>{{product.price * product.cantidad}}</td>
                                </tr>
                            {% endfor %}
                            <tr>
                                <td colspan="5">
                                    <div class="divider"></div>
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td  style="text-align: center;"colspan="2">TOTAL {{total}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}<script src="{{ asset('js/cart.js') }}">{% endblock %}
